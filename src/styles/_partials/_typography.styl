.typo {
    &__body {
        font-size: 4.75vw
        font-family: sans-serif
        font-weight: bold
        
        &:nth-child(n + 2) {
            margin-top: 6vw
        }
        
        @media screen and (max-width: 1200px) {
            font-size: 6vw
        }
    }
    
    &__no-wrap {
        display: block
        white-space: nowrap
    }
    
    &__blackout {
        cursor: pointer
        background-color: black
        box-sizing: context-box
        transition: background-color 0.3s ease
        
        &:hover {
            background-color: white
        }
    }
    
    &__clickable {
        cursor: pointer
        text-decoration: underline
        transition: color 0.3s ease
        
        &:hover {
            color: red
        }
    }
    
    &__sub {
        font-size: 1.5vw
        
        @media screen and (max-width: 1200px) {
            font-size: 2.5vw
        }
    }
    
    &__micro {
        font-size: 1vw
        font-family: sans-serif
    }
}
